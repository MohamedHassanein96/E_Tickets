@model E_TicketsCore.Models.ActorMovie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ActorMovie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ActorId" />
            <input type="hidden" asp-for="MovieId" />
   

            <div class="form-group">
                <label asp-for="ActorId" class="control-label">Actor</label>
                <select asp-for="ActorId" class="form-control" asp-items="ViewBag.Actors"></select>
            </div>

            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Movie</label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.Movies"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
